<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_type_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.SetupAddInstrumentActivity">

    <Spinner
        android:id="@+id/types_spinner"
        android:layout_marginTop="8dp"
        android:layout_width="@dimen/width_general"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/add_instrument_button"
        android:layout_width="@dimen/width_general"
        android:layout_height="wrap_content"
        android:text="@string/add_instrument"
        android:textSize="@dimen/font_size_normal"
        android:padding="@dimen/padding_button"/>

</LinearLayout>